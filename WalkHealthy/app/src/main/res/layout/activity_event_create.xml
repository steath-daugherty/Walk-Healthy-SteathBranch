<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.kevin.walkhealthy.EventCreateActivity">


    <ScrollView
        style="@android:style/Widget.Material.ScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:scrollbarStyle="insideOverlay"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/txtEventName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/btnCreateEvent"
                android:layout_alignParentTop="true"
                android:layout_marginTop="62dp"
                android:ems="10"
                android:hint="Event Name"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/txtEventStartingLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/btnCreateEvent"
                android:layout_alignParentTop="true"
                android:layout_marginTop="126dp"
                android:ems="10"
                android:hint="Starting Location"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/txtEventEndingLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/btnCreateEvent"
                android:layout_alignParentTop="true"
                android:layout_marginTop="197dp"
                android:ems="10"
                android:hint="Ending Location"
                android:inputType="textPersonName" />

            <Spinner
                android:id="@+id/spinnerEventIntensity"
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:prompt="@string/common_google_play_services_enable_title"
                android:visibility="visible" />

            <CalendarView
                android:id="@+id/calendarEventCreate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="39dp" />

            <EditText
                android:id="@+id/editTextTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Event Starting Time"
                android:inputType="time"
                android:visibility="visible" />

            <Button
                android:id="@+id/btnCreateEvent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="26dp"
                android:text="Create" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
